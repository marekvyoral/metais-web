{
  "name": "metais",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hookform/error-message": "^2.0.1",
    "@id-sk/frontend": "^2.10.0",
    "@tanstack/react-query": "^4.29.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "classnames": "^2.3.2",
    "i18next": "^22.4.15",
    "i18next-http-backend": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-i18next": "^12.2.2",
    "react-router-dom": "^6.11.1",
    "react-select": "^5.7.3",
    "react-select-async-paginate": "^0.7.2",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "yarn start:portal & yarn start:admin && fg",
    "start:portal": "vite app/metais-portal",
    "start:admin": "vite app/metais-admin",
    "build": "yarn build:portal && yarn build:admin",
    "build:portal": "vite build app/metais-portal",
    "build:admin": "vite build app/metais-admin",
    "preview": "yarn preview:portal & yarn preview:admin && fg",
    "preview:portal": "vite preview app/metais-portal",
    "preview:admin": "vite preview app/metais-admin",
    "typescript-check": "tsc --noEmit",
    "lint": "eslint app/* --max-warnings 0",
    "lint-fix": "eslint app/* --fix",
    "prepare": "yarn prepare:portal && yarn prepare:admin",
    "prepare:portal": "recursive-copy -w node_modules/@id-sk/frontend/govuk/assets app/metais-portal/public/assets && recursive-copy -w node_modules/@id-sk/frontend/idsk/assets app/metais-portal/public/assets",
    "prepare:admin": "recursive-copy -w node_modules/@id-sk/frontend/govuk/assets app/metais-admin/public/assets && recursive-copy -w node_modules/@id-sk/frontend/idsk/assets app/metais-admin/public/assets",
    "storybook": "storybook dev -p 6006 --disable-telemetry",
    "build-storybook": "storybook build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.12",
    "@storybook/addon-interactions": "^7.0.12",
    "@storybook/addon-links": "^7.0.12",
    "@storybook/blocks": "^7.0.12",
    "@storybook/react": "^7.0.12",
    "@storybook/react-vite": "^7.0.12",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.12",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "recursive-copy-cli": "^1.0.20",
    "sass": "^1.62.1",
    "storybook": "^7.0.12",
    "vite": "^4.3.5",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
