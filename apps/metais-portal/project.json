{
  "name": "metais-portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "/src",
  "projectType": "application",
  "targets": {
    "typescript-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc --noEmit -p apps/metais-admin/tsconfig.json"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/metais-portal"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "start": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "metais-portal:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "metais-portal:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "metais-portal:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "metais-portal:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "metais-portal:build:development"
        },
        "production": {
          "buildTarget": "metais-portal:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/apps/metais-portal"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/metais-portal"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/metais-portal/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "lint:fix": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true,
        "lintFilePatterns": ["apps/metais-portal/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "metais-portal:build"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 6006,
        "configDir": "apps/metais-portal/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/metais-portal",
        "configDir": "apps/metais-portal/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
