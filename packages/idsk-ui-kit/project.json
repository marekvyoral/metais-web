{
    "name": "idsk-ui-kit",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/idsk-ui-kit/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/idsk-ui-kit/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/packages/idsk-ui-kit"
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/idsk-ui-kit/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "storybook": {
            "executor": "@nx/storybook:storybook",
            "options": {
                "port": 6007,
                "configDir": "packages/idsk-ui-kit/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nx/storybook:build",
            "outputs": ["{options.outputDir}"],
            "options": {
                "outputDir": "dist/storybook/idsk-ui-kit",
                "configDir": "packages/idsk-ui-kit/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        }
    }
}
